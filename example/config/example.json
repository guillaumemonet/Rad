{
    "services": {
        "cache": {
            "default": "database",
            "handlers": {
                "file": {
                    "config": {
                        "path": "example/cache/"
                    }
                }
            }
        },
        "log": {
            "default": "output",
            "displayTime": true,
            "handlers": {
                "file": {
                    "config": {
                        "file": "example/log/api.log"
                    }
                }
            }
        },
        "database": {
            "default": "pdo",
            "handlers": {
                "pdo": {
                    "config": {
                        "type": "mysql",
                        "host": "127.0.0.1",
                        "port": 3306,
                        "user": "test",
                        "password": "test",
                        "database": "example"
                    }
                }
            }
        },

        "template": {        
            "handlers": {
                "smarty": {
                    "config": {
                        "compile_check": true,
                        "force_compile": false,
                        "debugging": false,
                        "error_reporting": true,
                        "caching": true,
                        "cache_locking": true,
                        "cache_lifetime": 3600,
                        "template_dir": "example/templates/",
                        "compile_dir": "example/compiled/",
                        "config_dir": "example/config/",
                        "cache_dir": "example/cache/",
                        "cache_type": "database"
                    }
                }
            }
        }
    }
}