{
    "name": "rad/rad-framework",
    "description": "Rapid Application Development Framework.",
    "authors": [
        {
            "name": "Guillaume Monet",
            "email": "guillaume.monet@free.fr"
        }
    ],

    "license": "MIT",

    "autoload": {
        "psr-4": {
            "Rad\\": "src/Rad/"
        }
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "rad/rad-framework",
                "version": "dev-master",
                "source": {
                    "url": "git://github.com/guillaumemonet/rad.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-4": {
                        "Rad\\": "src/Rad/"
                    }
                }
            }
        }
    ],
    "require": {
        "php": " ^7.1",
        "psr/log": "^1",
        "psr/cache": "^1",
        "psr/container": "^1",
        "psr/http-message": "^1",
        "psr/link": "^1",
        "psr/simple-cache": "^1",
        "psr/http-server-middleware": "^1",
        "psr/http-server-handler": "^1",
        "psr/http-factory": "^1",
        "guzzlehttp/psr7": "1.4.2",
        "guzzlehttp/promises": "v1.3.1",
        "php-school/cli-menu": "3.0.0"
    },
    "require-dev": {
        "phpunit/php-timer": "^1.0.",
        "phpunit/phpunit": "^6.5"
    },
    "suggest": {
        "rad/rad-framework-builder": "dev-master",
        "rad/rad-framework-template-smarty": "dev-master",
        "rad/rad-framework-reco-easyrec": "dev-master",
        "rad/rad-framework-mail-simplemail": "dev-master",
        "rad/rad-framework-graphql": "dev-master",
        "rad/rad-framework-orm-doctrine": "dev-master",
        "rad/rad-framework-ml": "dev-master",
        "rad/rad-framework-auth": "dev-master"
    },
    "bin": ["bin/rad"]
}
